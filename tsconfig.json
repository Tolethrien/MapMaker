{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["@webgpu/types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@editor/*": ["src/editor/*"]
    }
  },
  "include": ["src"]
}
